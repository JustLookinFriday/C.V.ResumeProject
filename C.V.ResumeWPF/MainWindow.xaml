<Window x:Class="C.V.ResumeWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:C.V.ResumeWPF"
        mc:Ignorable="d"
        Title="C.V.Resume" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBlock Text="Составление твоего лучшего резюме!" Width="auto" Margin="5" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"/>
        </StackPanel>

        <Frame Grid.Row="1" x:Name="MyFrame" Content="Здесь будет описана вся твоя потрясающая и насыщанная жизнь!" Background="Gray"/>
        <StackPanel Grid.Row="2">
            <TextBlock>Что-то да будет</TextBlock>
        </StackPanel>
    </Grid>
</Window>
