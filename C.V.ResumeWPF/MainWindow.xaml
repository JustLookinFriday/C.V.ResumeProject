<Window Background="#808080"
        x:Class="C.V.ResumeWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:C.V.ResumeWPF"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="C.V.Resume" Height="900" Width="650"
        Icon="/Assets/Images/Icon.png">
    <Grid Background="White" Style="{StaticResource G_Alignment}">
        <Grid.RowDefinitions>
            <RowDefinition Height="797"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#ffffff" Width="595">
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Background="#c4c4c4"/>
            <Grid x:Name="OpenningText">
                <TextBlock Text="C.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumevC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.ResumeC.V.Resume" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" FontSize="32" FontStyle="Italic" FontFamily="{StaticResource QRegular}" Opacity="0.025"/>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="25">
                        <Separator Opacity="0.5"/>
                        <TextBlock x:Name="Text_1" Text="Hello!" HorizontalAlignment="Right" VerticalAlignment="Center" Style="{StaticResource OpenningText_1}" FontFamily="{StaticResource QRegular}"/>
                    </Grid>
                    <Grid Grid.Row="1" Margin="25">
                        <Separator Opacity="0.5"/>
                        <TextBlock x:Name="Text_2" Text="At the moment, as the person who launched this program, you are very lucky!" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource OpenningText_2}" FontFamily="{StaticResource QRegular}"/>
                    </Grid>
                    <Grid Grid.Row="2" Margin="25">
                        <Separator Opacity="0.5"/>
                        <TextBlock x:Name="Text_3" Text="Since this time you decided that you need to make your personal resume for a new position." HorizontalAlignment="Right" VerticalAlignment="Center" Style="{StaticResource OpenningText_3}" FontFamily="{StaticResource QRegular}"/>
                    </Grid>
                    <Grid Grid.Row="3" Margin="25">
                        <Separator Opacity="0.5"/>
                        <Button x:Name="OpenningButton" Content="Let's go!" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource OpenningButton}" Click="OpenningButton_Click"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="1" Background="{StaticResource ColorSecondary20}">
            <StackPanel Style="{StaticResource SP_Alignment}">
                <TextBlock Text="{Binding ElementName=MainFrame, Path=Content.Title}" FontSize="10" FontFamily="{StaticResource QRegular}"/>
            </StackPanel>
            <Grid x:Name="ControlButton" Visibility="Hidden">
                <Button x:Name="PreviousButton" Content="&#60;" Style="{StaticResource SwitchButton}" HorizontalAlignment="Left" Click="PreviousButton_Click"/>
                <Button x:Name="SubsequentButton" Content="&#62;" Style="{StaticResource SwitchButton}" HorizontalAlignment="Right" Click="SubsequentButton_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Window> 
